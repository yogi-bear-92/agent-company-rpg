# Environment Configuration Example
# Copy this file to .env for local development

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment (development, staging, production)
NODE_ENV=development

# Application settings
APP_NAME=Agent RPG Project
APP_VERSION=1.0.0
APP_URL=http://localhost:3000

# =============================================================================
# API KEYS (Replace with your actual keys)
# =============================================================================

# OpenAI API Key (for AI features)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (for Claude integration)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# GitHub Token (for GitHub integration features)
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your-github-token-here

# =============================================================================
# CLAUDE FLOW CONFIGURATION
# =============================================================================

# Claude Flow MCP Configuration
CLAUDE_FLOW_ENABLED=true
CLAUDE_FLOW_API_KEY=cf_your-claude-flow-key-here
CLAUDE_FLOW_SERVER_URL=http://localhost:8051

# Swarm Configuration
SWARM_MAX_AGENTS=8
SWARM_TOPOLOGY=mesh
SWARM_MEMORY_ENABLED=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite (for local development)
DATABASE_URL=sqlite:./data/agent-rpg.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/agent_rpg

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================

# Sentry (Error tracking)
SENTRY_DSN=https://your-dsn@sentry.io/your-project

# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX-X

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret (generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Session Secret
SESSION_SECRET=your-session-secret-here

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Agent RPG <noreply@agent-rpg.com>

# SendGrid (alternative)
SENDGRID_API_KEY=SG.your-sendgrid-api-key

# =============================================================================
# FILE STORAGE
# =============================================================================

# Local storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10MB

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================

# Debug settings
DEBUG=agent-rpg:*
LOG_LEVEL=info

# Development features
ENABLE_MOCK_DATA=true
ENABLE_DEV_TOOLS=true
Enable_HOT_RELOAD=true

# Testing
TEST_DATABASE_URL=sqlite::memory:
TEST_TIMEOUT=30000

# =============================================================================
# CI/CD CONFIGURATION
# =============================================================================

# GitHub Actions
GITHUB_ACTOR=your-github-username

# Docker
DOCKER_REGISTRY=ghcr.io
DOCKER_NAMESPACE=your-namespace

# Deployment
DEPLOY_ENVIRONMENT=staging
DEPLOY_BRANCH=main

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=100MB

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15min

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Feature toggles
FEATURE_AGENT_LEARNING=true
FEATURE_MULTIPLAYER=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_SOCIAL_FEATURES=false

# Experimental features
EXPERIMENTAL_NEURAL_NETWORKS=false
EXPERIMENTAL_BLOCKCHAIN=false

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit the actual .env file to version control
# 2. Use strong, unique secrets for production
# 3. Rotate API keys regularly
# 4. Use environment-specific configurations
# 5. Test with minimal required environment variables first

# Required environment variables for basic functionality:
# - NODE_ENV
# - APP_URL
# - JWT_SECRET
# - DATABASE_URL (if using database features)

# Optional but recommended:
# - OPENAI_API_KEY (for AI features)
# - SENTRY_DSN (for error tracking)
# - GITHUB_TOKEN (for GitHub integration)
